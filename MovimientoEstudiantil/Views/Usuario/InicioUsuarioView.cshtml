@{
    ViewData["Title"] = "Sistema de Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5 text-center">
    <h1 class="mb-4" style="font-family: 'Playfair Display', serif;">
        Sistema de Gestión de Usuarios
    </h1>

    <div class="d-flex flex-column align-items-center gap-4">
        <!-- Gestión de Usuarios -->
        <div class="p-3 shadow-sm border border-3 border-primary" style="background-color: #e0f4fb; width: 320px;">
            <div class="mb-2">
                <h2 class="fw-bold mb-1">
                    <i class="bi bi-person-lines-fill me-2"></i> Gestión de Usuarios
                </h2>
                <p class="mb-3">Administra perfiles de administradores</p>
            </div>
            <a asp-action="Index" class="btn btn-primary w-100">Acceder</a>
        </div>

        <!-- Historial -->
        <div class="p-3 shadow-sm border border-3 border-primary" style="background-color: #e0f4fb; width: 320px;">
            <div class="mb-2">
                <h2 class="fw-bold mb-1">
                    <i class="bi bi-clock-history me-2"></i> Historial
                </h2>
                <p class="mb-3">Ver registros de actividad</p>
            </div>
            <a href="/Usuario/Historial" class="btn btn-primary w-100">Acceder</a>
        </div>
    </div>
</div>
